<!-- Post Content Column -->
        <div class="col-lg-8">
<p id="notice"><%= notice %></p>
          <% if current_user %>
          <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Back', posts_path %>
          <% end %>
          <!-- Title -->
          <h1 class="mt-4"><%= @post.title %></h1>

          <!-- Author -->
          <p class="lead">
            by
            <%= link_to @post.name, "#" %>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on <%= @post.created_at.to_s(:long) %></p>

          <hr>

          <!-- Preview Image -->
          <%= image_tag @post.image, class: "img-fluid rounded" %>

          <hr>

          <!-- Post Content -->
          <p><%= @post.body %></p>

          <hr>

          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <%= form_for([@post, @post.comments.build]) do |f| %>
                <div class="form-group">
                  <%= f.text_field :commenter, :placeholder => "Name", class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.text_area :body, :placeholder => "Enter comment here", class: "form-control" %>
                </div>
                <%= f.submit class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>

          <!-- Single Comment -->
          <%= render @post.comments %>
